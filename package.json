{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "tsc": "tsc",
    "start": "tsc && node build/index.js",
    "dev": "ts-node-dev index.ts",
    "test": "mocha --parallel --require ts-node/register ./src/**/*.test.ts",
    "test:coverage": "nyc --all npm run test",
    "test:badges": "nyc --all --reporter=json-summary npm run test && jest-coverage-badges --input ./coverage/coverage-summary.json --output ./badges",
    "lint": "eslint --ext .ts . --fix",
    "prepare": "husky install"
  },
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.4",
    "express-rate-limit": "^5.3.0",
    "helmet": "^4.6.0",
    "proxyquire": "^2.1.3",
    "sqlite": "^4.0.23",
    "sqlite3": "^4.0.6",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@tsconfig/node10": "^1.0.8",
    "@types/chai": "^4.2.21",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.6.2",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.2",
    "@types/sqlite3": "^3.1.7",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "jest-coverage-badges": "^1.1.2",
    "mocha": "^6.1.4",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "sinon": "^11.1.2",
    "supertest": "^4.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  }
}
